<!doctype html>
<html>
	<head>
	<style>
	.personRow {color: green}
	.personButtons {float: right}
	</style>
	</head>
	<body>
		<h1>List of People in Our Database</h1>
			<form method="get" action="/people/new" >
      			<button>Add Person</button>
    		</form>
		<ul>
			<% people.forEach( function( person ) { %>
			<li>
			<div class="personRow">
				<%= person.firstname %>
				<%= person.lastname %>
				<%= person.id %>
				<div class="personButtons">
				<form method="post" action="/delete/<%= person.id %>" >
      				<button>Delete</button>
    			</form>
    			</div>
			</div>
			</li><br/>
			<% }) %>
		</ul>
	</body>
</html>